<div class="text-black">
  <div class="flex items-center justify-between mb-1 w-full">
    <h1 class="uppercase mb-0 mr-2 font-75 leading-3">lucien george</h1>
  </div>
  <div class="flex justify-between items-end w-full mb-1">
    <h3 class="uppercase font-75 leading-3">fullstack developer</h3>
    <div class="flex justify-end items-center">
      <%= link_to User::GITHUB_URL, target: :blank, class: 'mr-4' do %>
        <span class="text-black font-75"><i class="fab fa-github"></i> /<%= Contributor::ME %></span>
      <% end %>
      <%= link_to User::LINKEDIN_URL, target: :blank do %>
        <span class="text-black font-75"><i class="fab fa-linkedin-in"></i> /luciengeorge</span>
      <% end %>
    </div>
  </div>
</div>
<hr class="my-0">
<div class="grid grid-cols-3">
  <div class="col-span-1 pr-2 border-r border-gray-200">
    <div>
      <div class="relative inline-block mb-0">
        <h4 class="font-normal uppercase mb-1 text-black font-75">Contact</h4>
        <div class="absolute bottom-0 left-0 bg-black w-1/2 h-0.5"></div>
      </div>
    </div>
    <div class="flex flex-col mb-3">
      <span class="text-sm text-gray-700 mb-1"><i class="fal fa-phone-alt mr-2"></i><%= link_to '+33 7 86 26 07 51', 'tel:+33786260751', class:"text-gray-700 font-75" %></span>
      <span class="text-sm text-gray-700 mb-1"><i class="fal fa-envelope mr-2"></i><%= link_to 'lucienkgeorge@gmail.com', 'mailto:lucienkgeorge@gmail.com', class:"text-gray-700 font-75" %></span>
      <span class="text-sm text-gray-700 mb-1 font-75"><i class="fal fa-map-marker-alt mr-2"></i>Paris, France</span>
    </div>
    <div>
      <div class="relative inline-block mb-0">
        <h4 class="mb-1 font-normal uppercase text-black font-75">Education</h4>
        <div class="absolute bottom-0 left-0 bg-black w-1/2 h-0.5"></div>
      </div>
    </div>
    <div>
      <% educations.each do |education| %>
        <%= render EducationComponent.new(education: education, download: download) %>
      <% end %>
    </div>
    <div>
      <div class="relative inline-block my-0">
        <h4 class="mb-1 font-normal uppercase text-black font-75">Programming</h4>
        <div class="absolute bottom-0 left-0 bg-black w-1/2 h-0.5"></div>
      </div>
    </div>
    <div class="flex items-center justify-start flex-wrap">
      <% programming_languages.each do |language| %>
        <span class="badge text-black mr-2 mb-1 font-10p badge-sm"><%= language %></span>
      <% end %>
    </div>
    <div>
      <div class="relative inline-block my-0">
        <h4 class="mb-1 font-normal uppercase text-black font-75">Languages</h4>
        <div class="absolute bottom-0 left-0 bg-black w-1/2 h-0.5"></div>
      </div>
    </div>
    <div class="flex items-center justify-start flex-wrap">
      <% spoken_languages.each do |language| %>
        <span class="badge text-black mr-2 mb-1 font-10p badge-sm"><%= language %></span>
      <% end %>
    </div>
  </div>
  <div class="col-span-2 pl-4">
    <div class="relative inline-block mb-0">
      <h4 class="mb-1 font-normal uppercase text-black font-75">Experiences</h4>
      <div class="absolute bottom-0 left-0 bg-black w-1/2 h-0.5"></div>
    </div>
    <div class="flow-root">
      <ul>
        <% experiences.each_with_index do |experience, index| %>
          <%= render Experiences::ExperienceComponent.new(
                experience: experience,
                previous_experience: index.zero? ? nil : experiences[index - 1],
                next_experience: index == experiences.size - 1 ? nil : experiences[index + 1],
                download: download
              ) %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
