{
  "name": "lucien-george-com",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css --watch",
    "heroku-postbuild": "npm run build:css && if [ -d /app/.cache/puppeteer ]; then mkdir -p ./.cache && mv /app/.cache/puppeteer ./.cache; fi"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "puppeteer": "^23.10.0",
    "tailwindcss": "^4.0.0"
  }
}
